<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace는 UserMapper.java 인터페이스와 정확히 일치해야 합니다. -->
<mapper namespace="com.yedambnb.user.mapper.UserMapper">

  <!-- 
    사용자 정보 조회 (selectUser) 
    - resultType에 UserVO 클래스의 전체 경로를 적어줍니다.
  -->
  <select id="selectUser" parameterType="string" resultType="com.yedambnb.vo.UserVO">
    SELECT  user_no,
            user_id,
            user_pw,
            user_name,
            birth_date,
            telephone,
            user_authority
    FROM    tbl_user
    WHERE   user_id = #{userId}
  </select>
  
  <!-- 
    사용자 정보 수정 (updateUser)
    - parameterType에 UserVO 클래스의 전체 경로를 적어줍니다.
  -->
  <update id="updateUser" parameterType="com.yedambnb.vo.UserVO">
    UPDATE  tbl_user
    <set>
      <if test="userName != null and !userName.equals('')">
        user_name = #{userName},
      </if>
      <if test="telephone != null and !telephone.equals('')">
        telephone = #{telephone},
      </if>
      <if test="birthDate != null">
        birth_date = #{birthDate},
      </if>
      <if test="userPw != null and !userPw.equals('')">
        user_pw = #{userPw}
      </if>
    </set>
    WHERE   user_no = #{userNo}
  </update>

</mapper>
